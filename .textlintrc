{
  "filters": {},
  "rules": {
    "preset-japanese": {
             "max-ten": false,
             "no-doubled-joshi": false,
        },
    "no-doubled-joshi": {
            "min_interval" : 1,
            "strict": false,
            "allow": [],
            "separatorChars": ["。","？","！"],
        },
    "preset-ja-technical-writing": {
      "sentence-length": {
        max: 100
      },
      "max-comma": false,
      "max-ten": false,
      "max-kanji-continuous-len": false,
      "arabic-kanji-numbers": false,
      "ja-no-mixed-period": false,
      "no-doubled-conjunction":false,
      "no-doubled-joshi": false,
      "no-exclamation-question-mark": false,
      "ja-no-weak-phrase": false,
    },
    "no-mixed-zenkaku-and-hankaku-alphabet": true,
    "preset-jtf-style": {
      "3.1.1.全角文字と半角文字の間": false,
      "2.2.3.一部の助数詞の表記": false,
      "4.1.1.句点(。)": false,
    },
    "prefer-tari-tari": true,
    "general-novel-style-ja": {
            "chars_leading_paragraph": false,
            "no_punctuation_at_closing_quote": false,
            "space_after_marks": false,
            "even_number_dashes": false,
            "max_arabic_numeral_digits": false,
            "appropriate_use_of_punctuation": false,
        },
    "ja-hiragana-hojodoushi": true,
    "@textlint-ja/textlint-rule-no-insert-dropping-sa": true,
    "prh": {
            "rulePaths": [
                "./prh.yml"
            ]
        }
  }
}